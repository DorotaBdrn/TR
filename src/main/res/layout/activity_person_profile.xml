<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonProfileActivity"
    android:background="@color/mainBackground">


    <ScrollView
        android:layout_width="400dp"
        android:layout_height="660dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="visible">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/person_profile_pic"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:src="@drawable/profile" />


            <TextView
                android:id="@+id/person_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_profile_pic"
                android:layout_marginTop="5dp"
                android:text="Full name"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/person_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_full_name"
                android:layout_marginTop="2dp"
                android:text="User name"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/person_profile_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_user_name"
                android:layout_marginTop="5dp"
                android:text="Hey there "
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#ADA7A7"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/person_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_profile_status"
                android:layout_marginTop="5dp"
                android:text="Country "
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FCFCFC"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/person_dof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_country"
                android:layout_marginTop="2dp"
                android:text="Date of Birth "
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#ADA7A7"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/person_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_dof"
                android:layout_marginTop="2dp"
                android:text="Gender "
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#ADA7A7"
                android:textSize="15sp" />





                <Button
                    android:id="@+id/trips"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/person_gender"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:text="Trips" />


            <Button
                android:id="@+id/person_send_friend_request"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trips"
                android:layout_marginTop="45dp"
                android:background="@color/colorPrimaryDark"
                android:text="Send friend request"
                android:textColor="@android:color/background_light"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/person_cancel_friend_request"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_send_friend_request"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:text="Cancel friend request"
                android:textColor="@android:color/background_light"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"/>



            <ImageButton
                android:id="@+id/go_to_home_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/trips"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_home_black_24dp" />


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>